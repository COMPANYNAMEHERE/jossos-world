{
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react", "react-hooks", "jsx-a11y"],
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": { "version": "detect" }
  }
}

